{
  "name": "vendorsoluce-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "VendorSoluce monorepo containing the marketing website and main application",
  "workspaces": [
    "packages/app",
    "packages/shared",
    "packages/website"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:website": "turbo run build --filter=website",
    "build:app": "turbo run build --filter=app",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0"
}

