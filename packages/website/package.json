{
  "name": "vendorsoluce-static",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./assets/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/tailwind.css -o ./assets/css/tailwind.css --watch",
    "serve": "npx http-server . -p 8080 -c-1 --cors",
    "dev": "npx http-server . -p 8080 -c-1 --cors -o"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}

