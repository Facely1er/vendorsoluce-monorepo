{
  "name": "app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "VendorSoluce - Vendor risk and supply chain assurance workflow platform with SBOM analysis, NIST SP 800-161 compliance, vendor assessments, and supply chain security tools",
  "scripts": {
    "clean": "rm -rf dist dist-demo node_modules",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:demo": "node scripts/copy-demo-html.js",
    "build:demo:react": "tsc && BUILD_MODE=demo vite build --mode demo",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "preview:demo": "npx serve demo"
  },
  "dependencies": {
    "@sentry/react": "^10.17.0",
    "@stripe/stripe-js": "^8.0.0",
    "@supabase/supabase-js": "^2.52.1",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "fast-xml-parser": "^5.2.5",
    "html2canvas": "^1.4.1",
    "i18next": "^23.7.11",
    "i18next-browser-languagedetector": "^7.2.0",
    "jspdf": "^4.2.0",
    "lucide-react": "^0.295.0",
    "mammoth": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-is": "^19.2.4",
    "react-joyride": "^2.9.3",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.1.0",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.0.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "sucrase": "^3.35.0",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
